<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.datasource">java:/comp/env/jdbc/MySql</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name = "hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <mapping class="it.hibernate.DeptEmp"/>
        <mapping class="it.hibernate.Departments"/>
        <mapping class="it.hibernate.DeptEmpLatestDate"/>
        <mapping class="it.hibernate.Salaries"/>
        <mapping class="it.hibernate.Titles"/>
        <mapping class="it.hibernate.Employees"/>
        <mapping class="it.hibernate.CurrentDeptEmp"/>
        <mapping class="it.hibernate.DeptManager"/>
    </session-factory>
</hibernate-configuration>
